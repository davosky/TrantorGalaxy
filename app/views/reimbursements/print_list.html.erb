<div class="col">
  <div class="card">
    <div class="card-body bg-white rounded">
      <%= image_tag("reimbursement/reimbursements_print_list_logo.svg", class: "img-fluid") %>
      <hr class="text-primary"/>
      <%= search_form_for @q, id: "search-form", url: print_list_reimbursements_path do |form| %>
        <div class="row">
          <div class="col-7">
            <div class="input-group mb-2">
              <div class="input-group-text input-group-text-fixed bg-primary text-white">
                <i class="fa-solid fa-calendar-day"></i>
                &nbsp;<span>Data Inizio</span>
              </div>
              <%= form.date_field :departure_date_gteq, class: "form-control" %>
            </div>
            <div class="input-group mb-2">
              <div class="input-group-text input-group-text-fixed bg-primary text-white">
                <i class="fa-solid fa-calendar-day"></i>
                &nbsp;<span>Data Fine</span>
              </div>
              <%= form.date_field :departure_date_lteq, class: "form-control" %>
            </div>
          </div>
          <div class="col-5">
            <div class="d-grid mb-2">
              <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                <i class="fa-solid fa-magnifying-glass"></i>
                &emsp;
                <strong>
                  Cerca
                </strong>
              <% end %>
            </div>
            <div class="d-grid mb-2">
              <%= link_to print_list_reimbursements_path(request.parameters.merge(format: "pdf")), class: "btn btn-primary", target: :_blank do %>
                <i class="fa-solid fa-print"></i>
                &emsp;
                Stampa
              <% end %>
            </div>
          </div>
        <% end %>
        <table class="table table-striped">
          <thead class="text-primary">
            <th class="text-center">
              <i class="fa-solid fa-arrow-up-9-1"></i>
              &nbsp;Numero
            </th>
            <th class="text-center">
              <i class="fa-solid fa-calendar-day"></i>
              &nbsp;Data Partenza
            </th>
            <th class="text-center">
              <i class="fa-solid fa-location-dot"></i>
              &nbsp;Luogo
            </th>
            <th class="text-center">
              <i class="fa-solid fa-building"></i>
              &nbsp;Struttura
            </th>
            <th colspan=2></th>
          </thead>
          <tbody>
            <% @reimbursements.each do |reimbursement| %>
              <tr>
                <td class="text-center">
                  <%= reimbursement.name %>
                </td>
                <td class="text-center">
                  <%= l(reimbursement.departure_date) %>
                </td>
                <td class="text-center">
                  <%= reimbursement.place_fr %>
                </td>
                <td class="text-center">
                  <%= reimbursement.structure_fr %>
                </td>
                <td>
                </td>
                <td>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
