<div class="card">
  <div class="card-header bg-light">
    <span class="float-start fs-3 fw-bold text-primary">
      <%= image_tag("reimbursement/reimbursements-logo.svg", class: "img-fluid", alt: "reimbursements-logo.svg") %>
      &emsp;
      Rimborsi Spese
    </span>
    <span class="float-end fs-4 fw-bold">
      <%= link_to new_reimbursement_path, class: "btn btn-sm btn-success shadow  fs-5 fw-bold", data: { turbo: true, turbo_frame: 'modal' }, title: "Crea un Nuovo Record" do %>
        <span class="fs-6 fw-bold">
          <i class="fa-solid fa-plus"></i>
          &nbsp;
          <i class="fa-solid fa-receipt"></i>
          &nbsp;
          Nuovo Rimborso Spese
        </span>
      <% end %>
    </span>
  </div>
  <div class="card-body">
    <div id="reimbursements">
      <table class="table table-hover">
        <thead>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-arrow-down-9-1 fs-5 fw-bold text-primary"></i>
            &nbsp;
            Numero
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-calendar-day fs-5 fw-bold text-primary"></i>
            &nbsp;
            Data Partenza
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-city fs-5 fw-bold text-primary"></i>
            &nbsp;
            Luogo
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-building fs-5 fw-bold text-primary"></i>
            &nbsp;
            Struttura
          </th>
          <th colspan=2></th>
        </th>
      </thead>
      <tbody>
        <% @reimbursements.each do |reimbursement| %>
          <%= render reimbursement %>
        <% end %>
      </tbody>
    </table>
    <div class="row mt-2">
      <div class="d-flex align-items-center justify-content-center">
        <%= paginate @reimbursements %>
      </div>
    </div>
  </div>
</div>
</div>