<div class="card">
  <div class="card-header bg-light">
    <span class="float-start fs-3 fw-bold text-primary">
      <%= image_tag("vehicle/vehicles-logo.svg", class: "img-fluid", alt: "vehicles-logo.svg") %>
      &emsp;
      Veicoli
    </span>
    <span class="float-end fs-4 fw-bold">
      <%= link_to new_vehicle_path, class: "btn btn-sm btn-success shadow", data: { turbo: true, turbo_frame: 'modal' }, title: "Crea un Nuovo Record" do %>
        <span class="fs-6 fw-bold">
          <i class="fa-solid fa-plus"></i>
          &nbsp;
          <i class="fa-solid fa-car"></i>
          &nbsp;
          Nuovo Veicolo
        </span>
      <% end %>
    </span>
  </div>
  <div class="card-body">
    <%# notice %>
    <div id="vehicles">
      <table class="table table-hover">
        <thead>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-car fs-5 fw-bold"></i>
            &nbsp;
            Modello
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-industry fs-5 fw-bold"></i>
            &nbsp;
            Produttore
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-credit-card fs-5 fw-bold"></i>
            &nbsp;
            Targa
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-money-bill fs-5 fw-bold"></i>
            &nbsp;
            Costo al Km
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-arrow-up-9-1 fs-5 fw-bold"></i>
            &nbsp;
            Posizione
          </th>
          <th colspan=2></th>
        </th>
      </thead>
      <tbody>
        <% @vehicles.each do |vehicle| %>
          <%= render vehicle %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>