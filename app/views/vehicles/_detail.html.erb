<div class="card">
  <div class="card-header bg-light">
    <span class="float-start fs-3 fw-bold text-primary">
      <%= image_tag(page_vehicle, class: "img-fluid") %>
      &emsp;
      <%= page_title_vehicle %>
    </span>
    <span class="float-end">
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </span>
  </div>
  <div class="card-body bg-light">
    <div class="row">
      <div class="col-6 offset-3">
        <ul class="list-group">
          <li class="list-group-item d-flex justify-content-between align-items-center fs-5">
            Modello:
            <span class="badge bg-info pill fs-5 fw-bold shadow">
              <%= @vehicle.name %>
            </span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center fs-5">
            Produttore:
            <span class="badge bg-info pill fs-5 fw-bold shadow">
              <%= @vehicle.producer %>
            </span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center fs-5">
            Targa:
            <span class="badge bg-info pill fs-5 fw-bold shadow">
              <%= @vehicle.licence_plate %>
            </span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center fs-5">
            Costo al Km::
            <span class="badge bg-info pill fs-5 fw-bold shadow">
              <%= number_to_currency(@vehicle.cost_per_km) %>
            </span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center fs-5">
            Posizione:
            <span class="badge bg-info pill fs-5 fw-bold shadow">
              <%= @vehicle.position %>
            </span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>