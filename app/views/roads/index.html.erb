<div class="card">
  <div class="card-header bg-light">
    <span class="float-start fs-3 fw-bold text-primary">
      <%= image_tag("road/roads-logo.svg", class: "img-fluid", alt: "roads-logo.svg") %>
      &emsp;
      Percorsi
    </span>
    <span class="float-end fs-4 fw-bold">
      <%= link_to new_road_path, class: "btn btn-sm btn-success shadow  fs-5 fw-bold", data: { turbo: true, turbo_frame: 'modal' }, title: "Crea un Nuovo Record" do %>
        <span class="fs-6 fw-bold">
          <i class="fa-solid fa-plus"></i>
          &nbsp;
          <i class="fa-solid fa-road"></i>
          &nbsp;
          Nuovo Percorso
        </span>
      <% end %>
    </span>
  </div>
  <div class="card-body">
    <div id="roads">
      <table class="table table-hover">
        <thead>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-road fs-5 fw-bold text-primary"></i>
            &nbsp;
            Percorso
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-ruler-horizontal fs-5 fw-bold text-primary"></i>
            &nbsp;
            Lunghezza
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-ticket fs-5 fw-bold text-primary"></i>
            &nbsp;
            Costo Autostrada
          </th>
          <th class="fs-5 fw-bold text-primary">
            <i class="fa-solid fa-arrow-up-9-1 fs-5 fw-bold text-primary"></i>
            &nbsp;
            Posizione
          </th>
          <th colspan=2></th>
        </th>
      </thead>
      <tbody>
        <% @roads.each do |road| %>
          <%= render road %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>